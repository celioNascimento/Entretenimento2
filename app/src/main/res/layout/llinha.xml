<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagemID"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:contentDescription=""
        android:scaleType="fitXY"
        android:src="@drawable/listbarcativeiro"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/nomeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="@string/nome_estabelecimento"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/enderecoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/endere_o"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:ignore="RtlHardcoded" />


    </LinearLayout>


</LinearLayout>

